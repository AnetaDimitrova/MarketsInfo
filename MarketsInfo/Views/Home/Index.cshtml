


@{
    ViewBag.Title = "Home";
}
@model List<MarketsInfo.Models.News>


@foreach (var news in Model)
{
    <div class="row">
        <div class="post col-md-6">
            <h2>@news.Title</h2>
            <div class="about">
                Posted on <i>@news.date</i>
                @if (news.Author != null)
                {
                    @:by <i>
                        @news.Author.FullName
                    @:( @news.Author.UserName ) </i>
                }
            </div>
            <div class="body">
                @Html.Raw(news.Body)
                <th>
                    @Html.ActionLink("Add comment", "Create", "Comments")
                </th>
                @news.Comments.Count
                @foreach (var com in news.Comments)
                {
                    <tr>
                    <td>
                        @Html.DisplayFor(model => com.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(model => com.Text)
                    </td>
                        <td>
                            @Html.DisplayFor(model => com.AuthorId)
                        </td>
                    </tr>
                }

            </div>
        </div>
    </div>
}