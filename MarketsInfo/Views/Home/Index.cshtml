
@using MarketsInfo.Classes
@using MarketsInfo.Models
@model IEnumerable<MarketsInfo.Models.News>



@{
    ViewBag.Title = "Home";
}


    <img src="~/Content/tfi-top-am-financial-markets.jpg" />
    

<div class="container">
    
    <div class="row page-intro">
        <div class="col-lg-12">
            <h1>
               MarketsInfo
                <small></small>
            </h1>
            <p>At MarketsInfo, you get  stock quotes, financial, business and economic news .</p>
        </div>
    </div>
    <!-- /.row -->
    <!-- Feature Row -->
    @foreach (News news in Model)
    {
        <div class="row">
            <article class="col-md-6 article-intro">

                <h3>
                    @Html.ActionLink(@news.Title, "Details", new {id = news.Id})
                </h3>
                <p>@Utiles.CutText(news.Body)</p>
            </article>

        </div>

    }

</div>
        



